{
  "name": "sandbox",
  "version": "1.0.0",
  "description": "The Katavault Sandbox is a React app that explores the features of Katavault from the perspective of a dApp.",
  "repository": {
    "type": "git",
    "url": "https://github.com/kibis-is/katavault"
  },
  "author": {
    "name": "Kieran O'Neill",
    "email": "hello@kieranoneill.com",
    "url": "https://github.com/kieranroneill"
  },
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run clean && vite build --config vite.config.ts",
    "build:dependencies": "./scripts/prebuild.sh",
    "clean": "shx rm -rf dist && shx rm -rf tsconfig.*.tsbuildinfo",
    "dev": "pnpm build:dependencies && vite dev --config vite.config.ts",
    "lint": "eslint .",
    "prettier": "prettier --write \"**/*.{cjs,js,json,mjs,ts,tsx}\"",
    "test": "exit 0"
  },
  "devDependencies": {
    "@chakra-ui/color-mode": "^2.2.0",
